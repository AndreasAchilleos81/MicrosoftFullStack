@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <CascadingValue Value="ThemeColor">
        @Body
    </CascadingValue>

    <select onselect="ChangeThemeColor" >
        <option value="blue">Blue</option>
        <option value="green">Green</option>
        <option value="red">Red</option>
    </select>
    @code{
        private string ThemeColor = "blue"; // Default value

        private void ChangeThemeColor(ChangeEventArgs e)
        {
            ThemeColor = e.Value.ToString();
        }
    }
</div>
