@page "/addrecipe"
@using RecipeManagerApp.Data;
@inject NavigationManager NavigationManager;
@inject IRecipeRepo RecipeService;


<h2>AddRecipe</h2>

<div>
	<label for="name">Recipe Name</label>
	<input id="name" @bind="recipe.Name" type="text" placeholder="Enter recipe name" />
	<br />
	<label for="description">Recipe Description</label>
	<input id="description" @bind="recipe.Description" type="text" placeholder="Enter recipe description" />
</div>


<button @onclick="AddRecipeHandler">Add Recipe</button>
@code {
	private Recipe recipe = new();

	private async Task AddRecipeHandler(MouseEventArgs args)
	{
		await RecipeService.AddRecipe(recipe);
		NavigationManager.NavigateTo("/");
	}
}
