@page "/ThemeCascade"
<h3>ThemeCascade</h3>

<CascadingValue Value="ThemeColor">
	<div class="container" style="background-color: @ThemeColor">
		<select @onchange="ChangeThemeColor">
			<option>blue</option>
			<option>red</option>
			<option>green</option>
			<option>gray</option>
		</select>
		<ParentCallingChild />
		<People />
	</div>
</CascadingValue>
@code {
	private string ThemeColor = "blue";
	private void ChangeThemeColor(ChangeEventArgs args)
	{
		ThemeColor = args.Value.ToString();
		StateHasChanged();
	}
}
